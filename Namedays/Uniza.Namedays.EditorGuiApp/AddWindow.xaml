<Window x:Class="Uniza.Namedays.EditorGuiApp.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uniza.Namedays.EditorGuiApp"
        mc:Ignorable="d"
        Title="Add nameday" Height="120" Width="300"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        ResizeMode="CanMinimize" Background="DarkGray">

    <Grid>
        <TextBlock Margin="10,9,230,77" Text="Name: "/>
        <TextBox x:Name="Opa" Margin="55,9,15,75" />
        <TextBlock Margin="10,49,230,37" Text="Date: "/>
        <DatePicker x:Name="Opa2" Margin="55,44,15,35" />
        <Button x:Name="Ok" Content="OK" Margin="150,79,85,5" Click="Ok_Click" Background="white"/>
        <Button x:Name="Cancel" Content="Cancel" Margin="225,80,5,5" Click="Cancel_Click" Background="white"/>
    </Grid>
</Window>
